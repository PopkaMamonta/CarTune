
<div class="container" id="container">
    <div class="form-container sign-up">
        <form id="signUpForm">
            <h1 style="color: #FFFFFF;">Create Account</h1>
            <input type="text" id="name" placeholder="Name" required>
            <input type="email" id="email" placeholder="Email" required>
            <input type="password" id="password" placeholder="Password" required>
            <button type="submit">Sign Up</button>
        </form>
    </div>
    <div class="form-container sign-in">
        <form id="loginForm">
            <h1 style="color: #FFFFFF;">Sign In</h1>
            <input type="email" id="loginEmail" placeholder="Email" required>
            <input type="password" id="loginPassword" placeholder="Password" required>
            <a href="#">Forgot Your Password?</a>
            <button type="submit">Sign In</button>
        </form>
    </div>
    <div class="toggle-container">
        <div class="toggle">
            <div class="toggle-panel toggle-left">
                <h1 style="color: #FFFFFF;">Welcome Back!</h1>
                <p style="color: #FFFFFF;">Enter your personal details to use all of site features</p>
                <button class="hidden" id="login">Sign In</button>
            </div>
            <div class="toggle-panel toggle-right">
                <h1 style="color: #FFFFFF;">Hello, Friend!</h1>
                <p style="color: #FFFFFF;">Register with yor personal details to use all of site features</p>
                <button class="hidden" id="register">Sign Up</button>
            </div>
        </div>
    </div>
</div>
